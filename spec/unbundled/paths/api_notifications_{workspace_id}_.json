        "in": "query",
        "name": "offset",
        "schema": {
          "type": "integer"
        },
        "description": "Defines the offset of the notifications that should be returned."
      },
      {
        "in": "path",
        "name": "workspace_id",
        "schema": {
          "type": "integer"
        },
        "description": "The workspace id that the notifications belong to.",
        "required": true
